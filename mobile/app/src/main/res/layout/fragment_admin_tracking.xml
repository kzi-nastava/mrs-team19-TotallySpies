<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.osmdroid.views.MapView
        android:id="@+id/mapAdmin"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">
        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchDriver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:queryHint="Search..."
            app:iconifiedByDefault="false" />
    </androidx.cardview.widget.CardView>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/rideDetailsBottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/card_color"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/txtDriverName"
                android:textColor="#A490F0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="@string/price_save" />

            <TextView
                android:id="@+id/txtRideStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/accent"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD"
                android:layout_marginVertical="10dp"/>

            <TextView android:id="@+id/txtFrom" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/from" android:textColor="@color/text"/>
            <TextView android:id="@+id/txtTo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/to" android:textColor="@color/text"/>
            <TextView android:id="@+id/txtPrice" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/price_0_rsd" android:textColor="@color/text"/>
            <TextView android:id="@+id/txtStartTime" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/start" android:textColor="@color/text"/>
            <TextView android:id="@+id/txtPassengerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/passengers" android:textColor="@color/text"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>