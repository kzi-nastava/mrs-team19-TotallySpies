<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- FILTER -->

    <Button
        android:id="@+id/btnAdminFilterHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:background="@color/accent"
        android:text="@string/filter"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/btnBackToUsers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:text="← Users"
        android:background="@drawable/bg_sort_button"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <!-- SORT BUTTONS -->
    <HorizontalScrollView
        android:id="@+id/sortAdminScroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/btnAdminFilterHistory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnAdminSortPickup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pickup ↑↓"
                android:background="@drawable/bg_sort_button"/>

            <Button
                android:id="@+id/btnAdminSortDestination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Destination ↑↓"
                android:background="@drawable/bg_sort_button"/>

            <Button
                android:id="@+id/btnAdminSortStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Start ↑↓"
                android:background="@drawable/bg_sort_button"/>

            <Button
                android:id="@+id/btnAdminSortEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="End ↑↓"
                android:background="@drawable/bg_sort_button"/>

            <Button
                android:id="@+id/btnAdminSortCreation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Created ↑↓"
                android:background="@drawable/bg_sort_button"/>

            <Button
                android:id="@+id/btnAdminSortCancellation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Cancellation ↑↓"
                android:background="@drawable/bg_sort_button"/>

            <Button
                android:id="@+id/btnAdminSortUserWhoCancelled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="User who cancelled ↑↓"
                android:background="@drawable/bg_sort_button"/>

            <Button
                android:id="@+id/btnAdminSortTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Total price ↑↓"
                android:background="@drawable/bg_sort_button"/>

            <Button
                android:id="@+id/btnAdminSortPanic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Panic ↑↓"
                android:background="@drawable/bg_sort_button"/>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- USERS LIST (DEFAULT VISIBLE) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/allUsersRecycleView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:clipToPadding="false"
        android:paddingBottom="12dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/sortAdminScroll"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- RIDE HISTORY LIST (DEFAULT HIDDEN) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/adminRideHistoryRecycleView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:clipToPadding="false"
        android:paddingBottom="12dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/sortAdminScroll"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>