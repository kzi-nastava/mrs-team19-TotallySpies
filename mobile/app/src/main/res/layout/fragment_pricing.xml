<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pricing_title"
            android:textColor="#C5B6FF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:textColor="#FFFFFF"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="@string/price_standard">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editStandardPrice"
                android:textColor="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:textColor="#FFFFFF"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="@string/price_luxury">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editLuxuryPrice"
                android:textColor="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:textColor="#FFFFFF"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="@string/price_van">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editVanPrice"
                android:textColor="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnSavePrices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/price_save"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/primary"/>

    </LinearLayout>
</ScrollView>